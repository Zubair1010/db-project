<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/assets_list_bg"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.example.zubair.myapplication.MainActivity"
                tools:showIn="@layout/app_bar_main"
    >

   <ImageView
       android:layout_marginTop="5dp"
       android:layout_width="65dp"
       android:layout_height="40dp"
       android:background="#ff696969"
       android:id="@+id/image_view_icon"/>
    <TextView
        android:id="@+id/last_update_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Updated On:"
        android:textSize="8.5dp"
        android:textColor="#fff"
android:layout_below="@id/image_view_icon"
       />
    <TextView
        android:id="@+id/last_update_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_below="@id/last_update_view"
        android:text="Date"
        android:textSize="8.5dp"/>
    <TextView
        android:id="@+id/asset_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_icon"
        android:text="Asset Name"
        android:layout_marginLeft="10dp"
        android:textSize="30dp"
        android:textColor="#fff"
        android:layout_marginTop="0dp"/>
    <TextView
        android:id="@+id/category_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_icon"
        android:layout_below="@id/asset_name"
        android:text="Category"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_icon"
        android:layout_below="@id/category_text_view"
        android:text="Location"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/arrow_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/location_text"
        android:layout_below="@id/category_text_view"
        android:text=">"
        android:layout_marginLeft="2dp"
        android:textSize="12dp"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/arrow_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/category_text_view"
        android:layout_below="@id/asset_name"
        android:text=">"
        android:layout_marginLeft="2dp"
        android:textSize="12dp"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/location_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/arrow_1"
        android:layout_below="@id/category_text_view"
        android:text="Location name"
        android:layout_marginLeft="2dp"
        android:textSize="12dp"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/arrow_2"
        android:layout_below="@id/asset_name"
        android:text="Category Name"
        android:layout_marginLeft="2dp"
        android:textSize="12dp"
        android:textColor="#fff"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/category_text_view"
        android:layout_below="@id/asset_name"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="142dp">
        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Quantity"
            android:textSize="12dp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/quantity_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="qtty"
            android:layout_marginLeft="2dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/quantity_text_view"
            android:textSize="12dp"
            android:textColor="#fff"/>

    </RelativeLayout>


</RelativeLayout>